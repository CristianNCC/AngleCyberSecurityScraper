<Window x:Class="NLPWebScraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="HackerNews Scraper" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <CheckBox Name="dynamicScrapingCheckbox" Grid.Row="0" Grid.Column="0" Content="Dynamic Scraping" Click="ToggleScrapingMode" Margin="5"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Name="staticScrapingGroupBox" Header="Static Scraping" Grid.Row="0" Grid.ColumnSpan="2"  Grid.Column="0" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Query Terms:" Margin="5" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="queryTermsTextBox" Text="SIM;iOS;Exploit;APT Map" Grid.Row="1" Margin="5"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Static no. of Pages:" Margin="5" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="numberOfPagesTextBox" Text="50" Grid.Row="1" Margin="5" PreviewTextInput="NumberValidationTextBox" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GroupBox Name="dynamicScrapingGroupBox" Header="Dynamic scraping" Grid.Row="0" Grid.Column="2" Margin="5" IsEnabled="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Target:"  Margin="5" VerticalAlignment="Center"/>
                        <TextBox Name="targetWebsiteTextbox" Text="https://thehackernews.com" Grid.Column="1" Margin="5" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Results" Grid.Row="1" Grid.ColumnSpan="3" Margin="5">
                    <ScrollViewer Margin="5">
                        <StackPanel Name="resultsStackPanel" Orientation="Vertical" CanHorizontallyScroll="True"/>
                    </ScrollViewer>
                </GroupBox>

                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="ScrapWebsiteEvent" Width="100" Content="Scrape" Margin="5"/>
                    <fa:ImageAwesome Name="spinnerControl" Visibility="Collapsed" Height="20" Icon="Spinner" Spin="True" SpinDuration="4" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
